@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div class="card p-3 shadow">
    <dl class="row">
        <dt class="col-sm-3">Student ID</dt>
        <dd class="col-sm-9">@Model.StudentId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Birth Date</dt>
        <dd class="col-sm-9">@Model.BirthDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">School</dt>
        <dd class="col-sm-9">@Model.SchoolName</dd>

        <dt class="col-sm-3">Percentage</dt>
        <dd class="col-sm-9">@Model.Percentage</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
